{% extends 'base.html.twig' %}

{% block body %}
    <div class="card bg-light mb-3 text-center" style="max-width: 18rem;">
        <div class="card-body">
            <h1 class="card-title">{{ actionTypes.id }}</h1>
            <div class="card-text">
                {{ actionTypes.descr }}
            </div>
            <br />

            <form action="http://{{ host }}/{{ actionTypes.id }}/upload" method="post" enctype="multipart/form-data">
                Select image to upload:
                <br><br>
                <input type="file" name="fileToUpload" id="fileToUpload">
                <br><br>
                <input class="btn btn-sm btn-success" type="submit" value="Upload Image" name="submit">
            </form>

        </div>
    </div>
{% endblock %}
